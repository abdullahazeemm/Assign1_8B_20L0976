<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Question1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:text="Prev" />

        <TextView
            android:id="@+id/tvCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="1/10"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:text="What is the primary IDE used for Java-based Android development?"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/rgAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbAns1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eclipse" />

        <RadioButton
            android:id="@+id/rbAns2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NetBeans" />

        <RadioButton
            android:id="@+id/rbAns3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visual Studio" />

        <RadioButton
            android:id="@+id/rbAns4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Studio" />
    </RadioGroup>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/secondary"
        android:text="Next" />

</LinearLayout>
